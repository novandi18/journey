<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Journey" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.SplashScreenOverlay" parent="Theme.SplashScreen">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.Journey.Splash" parent="Theme.SplashScreenOverlay">
        <item name="windowSplashScreenBackground">@color/blue_400</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash</item>
        <item name="postSplashScreenTheme">@style/Theme.Journey</item>
    </style>
</resources>